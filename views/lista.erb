<h1>Personagens Cadastrados</h1>

<ul>
  <% @personagens.each do |p| %>
    <li>
      <strong><%= p[:nome] %></strong> -
      <%= p[:classe].capitalize %> <%= p[:raca].capitalize %><br>
      Vida: <%= p[:vida] %> |
      Força: <%= p[:forca] %> |
      Defesa: <%= p[:defesa] %> |
      Inteligência: <%= p[:inteligencia] %> |
      Velocidade: <%= p[:velocidade] %><br>
      <a href="/personagens/<%= p[:id] %>/deletar" onclick="return confirm('Tem certeza que deseja excluir?');">🗑️ Excluir</a>
    </li>
  <% end %>
</ul>

